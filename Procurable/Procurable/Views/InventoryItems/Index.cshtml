@model IEnumerable<Procurable.Models.InventoryItemIndex>

@{
    ViewBag.Title = "Inventory Items";
}

<div class="row">
    <div class="col-lg-7"><h2>Inventory Items</h2></div>
    <div class="col-lg-5">
        <br />
        <form action="/InventoryItems/Search">
            <div class="input-group">
                @Html.TextBox("query", Request.Params["query"], new { @id = "searchBox", @placeholder = "Search for...", @class = "form-control" })
                <span class="input-group-btn">
                    <button id="searchButton" class="btn btn-default"><i class="fa fa-search"></i> Search</button>
                </span>
                <script>
                    $("#searchBox").keyup(function (event) {
                        if (event.keyCode == 13) {
                            $("#searchButton").click();
                        }
                    });
                </script>
            </div>
        </form>
    </div>
</div>
<p>@Html.ActionLink("Create New", "Create")</p>
@Html.Partial("DisplayTemplates/InventoryItemsIndex", Model);