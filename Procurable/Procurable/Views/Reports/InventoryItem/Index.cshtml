@model IEnumerable<Procurable.Models.InventoryItem>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Inventory Item Price History Reports</h2>

<table class="table" id="accordion">
    <tr>
        <th width="10px"></th>
        <th>
            Item
        </th>
        <th>
            Price
        </th>
        <th>
            Part Number
        </th>
        <th></th>
    </tr>

    @foreach(var inventoryItem in Model)
    {
            <tr>
                <td><i class="fa fa-line-chart" aria-hidden="true"></i></td>
                <td>
                    @Html.ActionLink(@Html.DisplayFor(modelItem => inventoryItem.Vendor.Name) + " - " + @Html.DisplayFor(modelItem => inventoryItem.Name), "InventoryItem", new { id = inventoryItem.ID })
                </td>
                <td>
                    $@Html.DisplayFor(modelItem => inventoryItem.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => inventoryItem.PartNumber)
                </td>
                <td>
                </td>
            </tr>
    }

</table>
