@model IEnumerable<Procurable.Controllers.DeperciationReport>

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var inventoryItem = (Procurable.Models.InventoryItem)ViewData["inventoryItem"];
}

<h2><i class="fa fa-line-chart" aria-hidden="true"></i> @inventoryItem.Name Depreciation Report</h2>
<h4 style="margin-left:50px">$@inventoryItem.DepreciationRemaining cost remaining on the item<br />Fully depreciated in @inventoryItem.DepreciationDate.ToHumanString()</h4>
<div id="chart_div"></div>
<script>
    google.charts.load('current', { packages: ['corechart', 'line'] });
    google.charts.setOnLoadCallback(drawBasic);

    function drawBasic() {

        var data = new google.visualization.DataTable();
        data.addColumn('date', 'X');
        data.addColumn('number', 'Price');

        data.addRows([
            @for(int i=0; i<Model.Count(); i++)
            {
                var modified = @Model.ElementAt(i).Date.Date.ToShortDateString();
                <text>[new Date(Date.parse("@modified")), @Model.ElementAt(i).Price]</text>
                if (i < Model.Count() - 1)
                {
                    <text>,</text>
                }
            }
        ]);

        var options = {
            colors: ['red', '#f44336'],
            backgroundColor: { fill:'transparent' },
            hAxis: {
                title: 'Time'
            },
            vAxis: {
                title: 'Price'
            }
        };

        var chart = new google.visualization.LineChart(document.getElementById('chart_div'));

        chart.draw(data, options);
    }

</script>
<h3>History information</h3>
<table class="table">
    <tr>
        <th>
            Date
        </th>
        <th>
            Price
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Date.ToShortDateString()</td>
            <td>@item.Price</td>
        </tr>
    }

</table>
