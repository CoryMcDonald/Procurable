<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.procurable.activity.ItemDetailsActivity"
    android:orientation="vertical">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item name"
        android:textAlignment="center"
        android:textSize="30dp"
        android:layout_marginTop="75dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/item_name" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="price"
        android:textAlignment="center"
        android:textSize="25dp"
        android:layout_below="@+id/item_name"
        android:layout_centerHorizontal="true"
        android:id="@+id/item_price" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="comments"
        android:textAlignment="center"
        android:textSize="25dp"
        android:layout_below="@+id/item_price"
        android:layout_centerHorizontal="true"
        android:id="@+id/item_comments"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request Item"
        android:id="@+id/button"
        android:layout_below="@+id/item_comments"
        android:layout_alignLeft="@+id/item_comments"
        android:layout_alignStart="@+id/item_comments" />
</RelativeLayout>
